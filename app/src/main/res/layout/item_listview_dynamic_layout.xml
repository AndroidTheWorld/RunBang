<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dynamic_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_while">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >
        <com.yang.rungang.view.RoundImageView
            android:id="@+id/dynamic_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/upload_head_pic"
            />
        <TextView
            android:id="@+id/dynamic_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米宝"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:layout_toRightOf="@id/dynamic_head_img"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/dynamic_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2天前"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:layout_below="@id/dynamic_name_text"
            android:layout_alignLeft="@id/dynamic_name_text"
            android:layout_marginTop="12dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dynamic_picture_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/dynamic_picture_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/dynamic_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12332323232323"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/dynamic_theme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#秀身材"
        android:textColor="@color/text_black"
        android:layout_marginLeft="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_dark_gray"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:padding="12dp">
        <RelativeLayout
            android:id="@+id/dynamic_comment_layout"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/dynamic_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment"/>
            <TextView
                android:id="@+id/dynamic_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dynamic_comment_img"
                android:layout_alignBottom="@id/dynamic_comment_img"
                android:text="0"
                android:textColor="@color/text_black"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_dark_gray"/>
        <RelativeLayout
            android:id="@+id/dynamic_like_layout"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/dynamic_like_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"/>
            <TextView
                android:id="@+id/dynamic_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dynamic_like_img"
                android:layout_alignBottom="@id/dynamic_like_img"
                android:text="0"
                android:textColor="@color/text_black"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_dark_gray"/>
        <RelativeLayout
            android:id="@+id/dynamic_share_layout"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/dynamic_share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dynamicshare" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@id/dynamic_share_img"
                android:layout_alignBottom="@id/dynamic_share_img"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_dark_gray"/>


</LinearLayout>