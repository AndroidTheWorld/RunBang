<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorTheme">
        <LinearLayout
            android:id="@+id/main_home_title_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/main_home_title_dynamic"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态"
                android:textColor="@color/title_home_text_press"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/main_home_title_news"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资讯"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/title_home_text_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/main_home_title_linear"
            android:layout_alignRight="@id/main_home_title_linear"
            android:layout_below="@id/main_home_title_linear"
            android:orientation="horizontal">
            <View
                android:id="@+id/main_home_title_dynamic_line"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@color/theme_while"

                />
            <View
                android:id="@+id/main_home_title_news_line"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@color/theme_while"
                android:layout_marginLeft="8dp"

                android:visibility="invisible"
                />
        </LinearLayout>


    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_home_mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
